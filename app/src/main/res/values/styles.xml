<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/layout_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Udacity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/dp20</item>
        <item name="android:textSize">@dimen/sp26</item>
    </style>

    <style name="adress_phone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">@dimen/dp20</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

</resources>
